@model IEnumerable<Filminurk_Mikk_Kivisild_TARpe24.Models.Actors.ActorsIndexViewModel>
@{
	int rowNumber = 1;
}
<div>
	<a asp-action="Create" asp-controller="Actors" type="submit" class="btn btn-primary">Add Actor</a>
</div>
<div class="h1">
	Actors
</div>
<form method="get">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">First name</th>
				<th scope="col">Last name</th>
				<th scope="col">Nickname</th>
				<th scope="col">First acted</th>
				<th scope="col">Age</th>
				<th scope="col">Gender</th>
				<th scope="col">Tools</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var actor in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@actor.FirstName</td>
					<td>@actor.LastName</td>
					<td>@actor.NickName</td>
					<td>@actor.FirstActed</td>
					<td>@actor.Age</td>
					<td>@actor.Gender</td>
					<td>
						<a asp-action="Edit" asp-route-id="@actor.ActorID">Edit</a>
						<a asp-action="Details" asp-route-id="@actor.ActorID">Details</a>
						<a asp-action="Delete" asp-route-id="@actor.ActorID">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</form>