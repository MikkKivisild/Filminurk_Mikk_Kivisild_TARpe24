@model Filminurk_Mikk_Kivisild_TARpe24.Models.Actors.ActorsCreateUpdateViewModel

@if(Model.ActorID.HasValue)
{
	<h1>Update Actor</h1>
}
else
{
	<h1>Add Actor</h1>
}
<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="ActorID" type="hidden"/>

		<div class="form-group row">
			<label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="FirstName" class="form-control" />
			</div>
		</div>		
		<div class="form-group row">
			<label asp-for="LastName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="LastName" class="form-control" />
			</div>
		</div>		
		<div class="form-group row">
			<label asp-for="NickName" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="NickName" class="form-control" />
			</div>
		</div>		
		<div class="form-group row">
			<label asp-for="FirstActed" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="FirstActed" class="form-control" />
			</div>
		</div>		
		<div class="form-group row">
			<label asp-for="Age" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Age" class="form-control" />
			</div>
		</div>		
		<div class="form-group row">
			<label asp-for="Gender" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<select asp-for="Gender" asp-items="Html.GetEnumSelectList<Core.Domain.Gender>()" class="form-control">
					<option value="">-- Gender --</option>
				</select>
			</div>
		</div>		
		@if(Model.ActorID.HasValue)
		{
			<input asp-action="Update" asp-controller="Actors" type="submit" class="btn btn-primary" value="Update" />
		}
		else
		{
			<input asp-action="Create" asp-controller="Actors" type="submit" class="btn btn-primary" value="Create" />
		}
		<a asp-action="Index" asp-controller="Actors" class="btn btn-success">Return to list</a>
	</form>
</div>