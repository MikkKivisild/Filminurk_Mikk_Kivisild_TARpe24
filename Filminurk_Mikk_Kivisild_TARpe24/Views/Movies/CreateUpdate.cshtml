@using Filminurk_Mikk_Kivisild_TARpe24.Models.Movies
@using Core.Domain


@model Filminurk_Mikk_Kivisild_TARpe24.Models.Movies.MoviesCreateUpdateViewModel

@if(Model.ID.HasValue)
{
    <h1>Muuda Film</h1>
}
else
{
    <h1>Lisa Film</h1>
}
<h1>Muuda Film</h1>
<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="ID" type="hidden"/>
        <input asp-for="EntryCreatedAt" type="hidden"/>
        <input asp-for="EntryModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="Title" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="FirstPublished" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Director" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CurrentRating" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Seasons" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="LastPublished" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Fish" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Files" class="col-sm-2 col-form-control"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Files" multiple type="file"/>
            </div>
        </div>
        @foreach(var images in Model.Images)
        {
            <partial name="_Images" model="images"/>
            <input asp-action="removeImage" asp-controller="Movies" asp-route-ImageID="@images.ImageID" type="submit"
            class="btn btn-success" value="Eemalda see pilt"/>
        }
        @if (Model.ID.HasValue)
        {
            <input asp-action="Update" asp-controller="Movies" type="submit" class="btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="Create" asp-controller="Movies" type="submit" class="btn btn-primary" value="Create" />
        }
        <a asp-action="Index" asp-controller="Movies" class="btn btn-success">Return to list</a>

	</form>
</div>